<h3 class="alignleft">Hi <%=@user.name%>!</h2>
<a class="alignright btn btn-secondary"href="/buckets/new">Create Bucket</a>

<ul class="clear-fix list-unstyled ">
    <% @buckets.each do |bucket| %>
        <li class="clear-fix">
            <button type="button" class="btn bucket-btn" data-toggle="collapse" data-target="#bucket<%=bucket.id%>">Bucket: <%=bucket.name%></button>
            <div id="bucket<%=bucket.id%>" class="bucket-contents collapse">
                <p class="alignleft"><em><%=bucket.description%></em></p>
                <a class="btn alignright" href="/buckets/<%=bucket.id%>/edit">Edit</a>
                <h4 class="clear-fix alignleft">Goals</h4>
                <a class="btn alignright" href="/buckets/<%=bucket.id%>/goals/new">Add Goal</a>
                <ul class="list-unstyled clear-fix">
                    <% bucket.goals.each do |goal| %>
                        <li class="clear-fix">
                            <h4><%=goal.title%></h4>
                            <p class="alignleft"><%=goal.description%></p>
                            <a class="btn alignright" href="/buckets/<%=bucket.id%>/edit">Edit</a>
                        </li>
                    <% end %>
                </ul>
            </div>
        </li>
    <% end %>
</ul>

