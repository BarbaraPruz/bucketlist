<h3>Create Goal for Bucket <%=@bucket.name%></h3>
<form action="/goals" method="POST" id="new_goal_form">
    <input type="hidden" id="bucket_id" name="bucket_id" value="<%=@bucket.id%>">
    <label for="title">Title:</label><input type="text" id="title" name="title"required ><br>
	<label for="description">Description:</label><textarea id="description" name="description"></textarea><br>
    <button class="btn" type="submit"form="new_goal_form" value="Submit">Create</button>
    <a class="btn" href="/user_home">Cancel</a>
</form>