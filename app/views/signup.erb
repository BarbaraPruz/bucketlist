<form class="user-form" action="/users" method="POST">
    <h4>Sign Up</h4>

    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">Email:</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id="email" name="email" placeholder="email for login" required>
        </div>
    </div>

    <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">Name:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="name" name="name" required>
        </div>
    </div>

    <div class="form-group row">
        <label for="password" class="col-sm-2 col-form-label">Password:</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="password" name="password" required>
        </div>
    </div>
    <!-- To Do: reconfirm password field -->
    
    <div class="row">
        <div class="col-sm-12 text-center">
            <button class="btn btn-dark" type="submit" id="submit" value="submit">
                Sign Up<img src="/images/bucket-24.png">
            </button>
        </div>
    </div>

</form>